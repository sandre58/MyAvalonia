<my:ContentDialog x:Class="MyNet.Avalonia.Demo.Views.Dialogs.LoginDialogView"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:my="http://mynet.com/avalonia"
                  xmlns:vm="clr-namespace:MyNet.Avalonia.Demo.ViewModels.Dialogs"
                  xmlns:samples="clr-namespace:MyNet.Avalonia.Demo.Views.Samples"
                  d:DesignHeight="600"
                  d:DesignWidth="900"
                  x:DataType="vm:LoginDialogViewModel"
                  CanResize="True"
                  Header="User Registration"
                  mc:Ignorable="d">
    <ScrollViewer MaxHeight="500">
        <samples:FormContent DataContext="{Binding Form}" />
    </ScrollViewer>
</my:ContentDialog>
