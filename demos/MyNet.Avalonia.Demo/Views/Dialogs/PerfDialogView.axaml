<my:ContentDialog x:Class="MyNet.Avalonia.Demo.Views.Dialogs.PerfDialogView"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:my="http://mynet.com/avalonia"
                  xmlns:vm="clr-namespace:MyNet.Avalonia.Demo.ViewModels.Dialogs"
                  d:DesignHeight="450"
                  d:DesignWidth="800"
                  Header="Performance Test Dialog"
                  x:DataType="vm:PerfDialogViewModel"
                  mc:Ignorable="d">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" 
                   Text="This dialog contains a large list to test performance" 
                   Margin="0,0,0,10"
                   TextWrapping="Wrap" />
        
        <ListBox ItemsSource="{Binding List}"
                 Height="300"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</my:ContentDialog>
